<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" width="32" height="32">
  <defs>
    <linearGradient id="snowflakeGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#E3F2FD;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#BBDEFB;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#90CAF9;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Main snowflake structure -->
  <g fill="url(#snowflakeGradient)" stroke="url(#snowflakeGradient)" stroke-width="0.5">
    <!-- Vertical line -->
    <line x1="16" y1="4" x2="16" y2="28" stroke-width="1.5"/>
    
    <!-- Horizontal line -->
    <line x1="4" y1="16" x2="28" y2="16" stroke-width="1.5"/>
    
    <!-- Diagonal lines -->
    <line x1="7.5" y1="7.5" x2="24.5" y2="24.5" stroke-width="1.5"/>
    <line x1="24.5" y1="7.5" x2="7.5" y2="24.5" stroke-width="1.5"/>
    
    <!-- Top branches -->
    <line x1="16" y1="4" x2="13" y2="7"/>
    <line x1="16" y1="4" x2="19" y2="7"/>
    <line x1="16" y1="6" x2="14" y2="8"/>
    <line x1="16" y1="6" x2="18" y2="8"/>
    
    <!-- Bottom branches -->
    <line x1="16" y1="28" x2="13" y2="25"/>
    <line x1="16" y1="28" x2="19" y2="25"/>
    <line x1="16" y1="26" x2="14" y2="24"/>
    <line x1="16" y1="26" x2="18" y2="24"/>
    
    <!-- Left branches -->
    <line x1="4" y1="16" x2="7" y2="13"/>
    <line x1="4" y1="16" x2="7" y2="19"/>
    <line x1="6" y1="16" x2="8" y2="14"/>
    <line x1="6" y1="16" x2="8" y2="18"/>
    
    <!-- Right branches -->
    <line x1="28" y1="16" x2="25" y2="13"/>
    <line x1="28" y1="16" x2="25" y2="19"/>
    <line x1="26" y1="16" x2="24" y2="14"/>
    <line x1="26" y1="16" x2="24" y2="18"/>
    
    <!-- Diagonal branches - top left to bottom right -->
    <line x1="7.5" y1="7.5" x2="10" y2="6"/>
    <line x1="7.5" y1="7.5" x2="6" y2="10"/>
    <line x1="24.5" y1="24.5" x2="22" y2="26"/>
    <line x1="24.5" y1="24.5" x2="26" y2="22"/>
    
    <!-- Diagonal branches - top right to bottom left -->
    <line x1="24.5" y1="7.5" x2="22" y2="6"/>
    <line x1="24.5" y1="7.5" x2="26" y2="10"/>
    <line x1="7.5" y1="24.5" x2="10" y2="26"/>
    <line x1="7.5" y1="24.5" x2="6" y2="22"/>
    
    <!-- Center decoration -->
    <circle cx="16" cy="16" r="2" fill="url(#snowflakeGradient)"/>
    <circle cx="16" cy="16" r="1" fill="#E8F5E8" opacity="0.8"/>
  </g>
</svg>